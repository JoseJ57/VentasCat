@model VentasSD.ViewModels.ArticuloViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Nuevo Articulo
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formUsuario">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label"></label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Recomendaciones" class="form-label"></label>
                                    <textarea asp-for="Recomendaciones" class="form-control" rows="2"></textarea>
                                    <span asp-validation-for="Recomendaciones" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Eslogan" class="form-label"></label>
                                    <input asp-for="Eslogan" class="form-control" />
                                    <span asp-validation-for="Eslogan" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Precio" class="form-label"></label>
                                        <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="Precio" class="text-danger"></span>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Estado" class="form-label"></label>
                                        <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<VentasSD.Dto.EstadoArticulos>()"></select>
                                        <span asp-validation-for="Estado" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImagenFile" class="form-label"></label>
                                    <input asp-for="ImagenFile" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="ImagenFile" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label"></label>
                                    <select asp-for="Categoria" class="form-select" asp-items="Html.GetEnumSelectList<VentasSD.Dto.Categorias>()"></select>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TipoArticulo" class="form-label"></label>
                                    <input asp-for="TipoArticulo" class="form-control" />
                                    <span asp-validation-for="TipoArticulo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdMarca" class="form-label"></label>
                                    <select asp-for="IdMarca" class="form-select" asp-items="@(new SelectList(Model.MarcasDisponibles, "IdMarca", "Nombre"))">
                                        <option value="">-- Seleccione una marca --</option>
                                    </select>
                                    <span asp-validation-for="IdMarca" class="text-danger"></span>
                                </div>

                                <!-- TIPO: Al cambiar, dispara el filtrado -->
                                <div class="mb-3">
                                    <label asp-for="IdTipo" class="form-label"></label>
                                    <select asp-for="IdTipo" class="form-select" id="selectTipo" asp-items="@(new SelectList(Model.TiposDisponibles, "IdTipo", "Nombre"))">
                                        <option value="">-- Seleccione un tipo --</option>
                                    </select>
                                    <span asp-validation-for="IdTipo" class="text-danger"></span>
                                </div>

                                <!-- TALLAS: Se llenan dinámicamente -->
                                <div class="mb-3">
                                    <label class="form-label">Tallas Disponibles</label>
                                    <div id="tallasContainer" class="border rounded p-3" style="max-height: 150px; overflow-y: auto;">
                                        <p class="text-muted mb-0">Seleccione primero un tipo</p>
                                    </div>
                                </div>

                                <!-- MATERIALES: Se llenan dinámicamente -->
                                <div class="mb-3">
                                    <label class="form-label">Materiales Disponibles</label>
                                    <div id="materialesContainer" class="border rounded p-3" style="max-height: 150px; overflow-y: auto;">
                                        <p class="text-muted mb-0">Seleccione primero un tipo</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save btn-lg">
                                <i class="fas fa-save"></i> Guardar Articulo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Evento al cambiar el select de Tipo
            $('#selectTipo').change(function() {
                const idTipo = $(this).val();

                if (idTipo) {
                    // Cargar Tallas
                    cargarTallas(idTipo);

                    // Cargar Materiales
                    cargarMateriales(idTipo);
                } else {
                    // Limpiar si no hay tipo seleccionado
                    $('#tallasContainer').html('<p class="text-muted mb-0">Seleccione primero un tipo</p>');
                    $('#materialesContainer').html('<p class="text-muted mb-0">Seleccione primero un tipo</p>');
                }
            });

            // Función para cargar tallas por AJAX
            function cargarTallas(idTipo) {
                $.ajax({
                    url: '@Url.Action("ObtenerTallasPorTipo", "Articulos")',
                    type: 'GET',
                    data: { idTipo: idTipo },
                    success: function(tallas) {
                        let html = '';

                        if (tallas.length > 0) {
                            tallas.forEach(function(talla) {
                                html += `
                                    <div class="form-check mb-2">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="TallasSeleccionadas"
                                               value="${talla.idTalla}"
                                               id="talla_${talla.idTalla}" />
                                        <label class="form-check-label" for="talla_${talla.idTalla}">
                                            ${talla.nombre}
                                        </label>
                                    </div>
                                `;
                            });
                        } else {
                            html = '<p class="text-muted mb-0">No hay tallas disponibles para este tipo</p>';
                        }

                        $('#tallasContainer').html(html);
                    },
                    error: function() {
                        $('#tallasContainer').html('<p class="text-danger mb-0">Error al cargar las tallas</p>');
                    }
                });
            }

            // Función para cargar materiales por AJAX
            function cargarMateriales(idTipo) {
                $.ajax({
                    url: '@Url.Action("ObtenerMaterialesPorTipo", "Articulos")',
                    type: 'GET',
                    data: { idTipo: idTipo },
                    success: function(materiales) {
                        let html = '';

                        if (materiales.length > 0) {
                            materiales.forEach(function(material) {
                                html += `
                                    <div class="form-check mb-2">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="MaterialesSeleccionados"
                                               value="${material.idMaterial}"
                                               id="material_${material.idMaterial}" />
                                        <label class="form-check-label" for="material_${material.idMaterial}">
                                            ${material.nombre}
                                        </label>
                                    </div>
                                `;
                            });
                        } else {
                            html = '<p class="text-muted mb-0">No hay materiales disponibles para este tipo</p>';
                        }

                        $('#materialesContainer').html(html);
                    },
                    error: function() {
                        $('#materialesContainer').html('<p class="text-danger mb-0">Error al cargar los materiales</p>');
                    }
                });
            }
        });
    </script>
}