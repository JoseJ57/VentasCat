@model VentasSD.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Nuevo Usuario
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formUsuario">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Nombre de Usuario -->
                        <div class="mb-3">
                            <label asp-for="NombreUsuario" class="form-label fw-bold">
                                <i class="fas fa-user text-primary"></i> Nombre de Usuario
                            </label>
                            <input asp-for="NombreUsuario"
                                   class="form-control"
                                   placeholder="Ingrese el nombre de usuario"
                                   autocomplete="off" />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>

                        <!-- Contraseña -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="fas fa-lock text-primary"></i> Contraseña
                            </label>
                            <div class="input-group">
                                <input asp-for="Password"
                                       type="password"
                                       class="form-control"
                                       id="passwordInput"
                                       placeholder="Ingrese una contraseña segura"
                                       autocomplete="new-password" />
                                <button class="btn btn-outline-secondary"
                                        type="button"
                                        id="togglePassword">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i>
                                Mínimo 6 caracteres, se recomienda usar letras, números y símbolos
                            </small>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Rol -->
                        <div class="mb-4">
                            <label asp-for="Rol" class="form-label fw-bold">
                                <i class="fas fa-user-tag text-primary"></i> Rol del Usuario
                            </label>
                            <select asp-for="Rol"
                                    class="form-select"
                                    asp-items="ViewBag.Roles">
                                <option value="">-- Seleccione un rol --</option>
                            </select>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i>
                                Define los permisos y accesos del usuario
                            </small>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <hr>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save btn-lg">
                                <i class="fas fa-save"></i> Guardar Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="card mt-3 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="fas fa-lightbulb"></i> Consejos de Seguridad
                    </h6>
                    <ul class="mb-0 small">
                        <li>Usa contraseñas únicas para cada usuario</li>
                        <li>Asigna el rol más apropiado según las responsabilidades</li>
                        <li>Revisa periódicamente los accesos de los usuarios</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Toggle para mostrar/ocultar contraseña
            $('#togglePassword').click(function() {
                const passwordInput = $('#passwordInput');
                const toggleIcon = $('#toggleIcon');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    toggleIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    toggleIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Validación de fortaleza de contraseña
            $('#passwordInput').on('input', function() {
                const password = $(this).val();
                const strength = calcularFortaleza(password);

                // Puedes agregar indicador visual aquí si lo deseas
            });

            function calcularFortaleza(password) {
                let strength = 0;
                if (password.length >= 6) strength++;
                if (password.length >= 10) strength++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
                if (/\d/.test(password)) strength++;
                if (/[^a-zA-Z0-9]/.test(password)) strength++;
                return strength;
            }

            // Validación antes de enviar
            $('#formUsuario').submit(function(e) {
                const nombreUsuario = $('input[name="NombreUsuario"]').val().trim();
                const password = $('input[name="Password"]').val();
                const rol = $('select[name="Rol"]').val();

                if (!nombreUsuario) {
                    e.preventDefault();
                    alert('El nombre de usuario es requerido.');
                    return false;
                }

                if (!password || password.length < 6) {
                    e.preventDefault();
                    alert('La contraseña debe tener al menos 6 caracteres.');
                    return false;
                }

                if (!rol) {
                    e.preventDefault();
                    alert('Debe seleccionar un rol para el usuario.');
                    return false;
                }
            });

            // Auto-focus en el primer campo
            $('input[name="NombreUsuario"]').focus();
        });
    </script>

