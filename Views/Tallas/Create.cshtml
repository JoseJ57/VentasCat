@model VentasSD.ViewModels.TallaViewModel
@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Nueva Talla
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formUsuario">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>






                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: S, M, L, XL" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tipos Aplicables</label>
                            <div class="border rounded p-3" style="max-height: 250px; overflow-y: auto;">
                                @if (Model.TiposDisponibles.Any())
                                {
                                    @foreach (var tipo in Model.TiposDisponibles)
                                    {
                                        <div class="form-check mb-2">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   name="TiposSeleccionados"
                                                   value="@tipo.IdTipo"
                                                   id="tipo_@tipo.IdTipo" />
                                            <label class="form-check-label" for="tipo_@tipo.IdTipo">
                                                @tipo.Nombre
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">No hay tipos disponibles. <a asp-controller="Tipos" asp-action="Create">Crear tipo</a></p>
                                }
                            </div>
                            <small class="form-text text-muted">
                                Selecciona los tipos de artículos que pueden usar esta talla
                            </small>
                        </div>
                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save btn-lg">
                                <i class="fas fa-save"></i> Guardar Talla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
