@model VentasSD.ViewModels.MaterialViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header card-register">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Nuevo Material
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" id="formUsuario">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>





                        <div class="form-group">
                            <label asp-for="Nombre"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Tipos de Material</label>
                            <div class="border p-3" style="max-height: 200px; overflow-y: auto;">
                                @foreach (var tipo in Model.TiposDisponibles)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="TiposSeleccionados"
                                               value="@tipo.IdTipo"
                                               id="tipo_@tipo.IdTipo" />
                                        <label class="form-check-label" for="tipo_@tipo.IdTipo">
                                            @tipo.Nombre
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-back">
                                <i class="fas fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-save btn-lg">
                                <i class="fas fa-save"></i> Guardar Material
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
